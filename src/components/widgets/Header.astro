---
import { Icon } from 'astro-icon/components';
import Logo from '~/components/Logo.astro';
import ToggleTheme from '~/components/common/ToggleTheme.astro';

const links = [
  { text: "Apartamentos", href: "#" },
  { text: "Comodidades", href: "#" },
  { text: "Ubicación", href: "#" },
  { text: "Invierte", href: "#" },
  { text: "Alquila", href: "#" },
];
---

<header class="sticky top-0 z-40 flex-none mx-auto w-full transition-all duration-100 ease-in">
  <div class="mx-4 my-2">
    <div class="relative bg-amber-100 dark:bg-red-500 rounded-full"> {/* Cambié a rojo en modo oscuro */}
      <div class="py-3 px-6 mx-auto max-w-7xl">
        <div class="flex items-center justify-between">
          {/* Logo */}
          <div class="flex items-center">
            <a class="flex items-center" href="/">
              <Logo />
            </a>
          </div>

          {/* Navegación Desktop */}
          <nav class="hidden md:flex h-full">
            <ul class="flex gap-8 h-full items-center">
              {
                links.map(({ text, href }) => (
                  <li>
                    <a
                      href={href}
                      class="text-gray-700 dark:text-white hover:text-gray-900 dark:hover:text-amber-200 text-sm font-medium transition duration-150 ease-in-out"
                    >
                      {text}
                    </a>
                  </li>
                ))
              }
              <li>
                <ToggleTheme iconClass="w-6 h-6 dark:text-white" />
              </li>
            </ul>
          </nav>

          {/* Toggle Menú Móvil y Theme en móvil */}
          <div class="flex items-center gap-4 md:hidden">
            <ToggleTheme iconClass="w-6 h-6 dark:text-white" />
            <button
              type="button"
              class="text-gray-500 dark:text-white hover:text-gray-600 dark:hover:text-amber-200 rounded-lg text-sm p-2.5 inline-flex items-center transition"
              aria-label="Toggle Menu"
            >
              <Icon name="tabler:menu" class="w-6 h-6" />
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>

<!-- Menú Móvil -->
<div class="hidden md:hidden fixed inset-0 z-50 bg-gray-800/60 backdrop-blur-sm">
  <div class="fixed right-0 top-0 bottom-0 w-full max-w-xs bg-white dark:bg-red-500">
    <div class="flex justify-between items-center p-6">
      <Logo />
      <button type="button" class="text-gray-500 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white">
        <Icon name="tabler:x" class="w-6 h-6" />
      </button>
    </div>
    <nav class="px-6">
      <ul class="flex flex-col gap-4">
        {
          links.map(({ text, href }) => (
            <li>
              <a
                href={href}
                class="block text-gray-700 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white text-base font-medium py-2"
              >
                {text}
              </a>
            </li>
          ))
        }
      </ul>
    </nav>
  </div>
</div>