---
import { Icon } from 'astro-icon/components';
import { Image } from 'astro:assets'; // Añadimos esta importación
import logo from '../../assets/images/logo-pixel-living.webp';
import ToggleTheme from '~/components/common/ToggleTheme.astro';

const links = [
  { text: "Apartamentos", href: "#" },
  { text: "Comodidades", href: "#" },
  { text: "Ubicación", href: "#" },
  { text: "Invierte", href: "#" },
  { text: "Alquila", href: "#" },
];
---

<header class="sticky top-0 z-40 flex-none mx-auto w-full p-4 md:px-14 transition-all duration-100 ease-in">
  <div class="mx-4 my-2">
    <div class="relative bg-red-500 dark:bg-emerald-500 rounded-full">
      <div class="py-3 px-6 mx-auto max-w-7xl">
        <div class="flex items-center justify-between">
          {/* Logo */}
          <div class="flex items-center">
            <a class="flex items-center" href="/">
              <Image 
                src={logo} 
                alt="Pixel Living Logo" 
                class="h-8 md:h-10 w-auto" 
                width={120} 
                height={40}
              />
            </a>
          </div>

          {/* Resto del código igual */}
          <nav class="hidden md:flex h-full">
            <ul class="flex gap-8 h-full items-center">
              {
                links.map(({ text, href }) => (
                  <li>
                    <a
                      href={href}
                      class="text-white hover:text-red-100 dark:hover:text-emerald-100 text-sm font-medium transition duration-150 ease-in-out"
                    >
                      {text}
                    </a>
                  </li>
                ))
              }
              <li>
                <ToggleTheme iconClass="w-6 h-6 text-white" />
              </li>
            </ul>
          </nav>

          <div class="flex items-center gap-4 md:hidden">
            <ToggleTheme iconClass="w-6 h-6 text-white" />
            <button
              type="button"
              class="text-white hover:text-red-100 dark:hover:text-emerald-100 rounded-lg text-sm p-2.5 inline-flex items-center transition"
              aria-label="Toggle Menu"
            >
              <Icon name="tabler:menu" class="w-6 h-6" />
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>

<!-- Menú Móvil -->
<div class="hidden md:hidden fixed inset-0 z-50 bg-gray-800/60 backdrop-blur-sm">
  <div class="fixed right-0 top-0 bottom-0 w-full max-w-xs bg-red-500 dark:bg-emerald-500">
    <div class="flex justify-between items-center p-6">
      <Image 
        src={logo} 
        alt="Pixel Living Logo" 
        class="h-8 w-auto" 
        width={120} 
        height={40}
      />
      <button type="button" class="text-white hover:text-red-100 dark:hover:text-emerald-100">
        <Icon name="tabler:x" class="w-6 h-6" />
      </button>
    </div>
    <nav class="px-6">
      <ul class="flex flex-col gap-4">
        {
          links.map(({ text, href }) => (
            <li>
              <a
                href={href}
                class="block text-white hover:text-red-100 dark:hover:text-emerald-100 text-base font-medium py-2"
              >
                {text}
              </a>
            </li>
          ))
        }
      </ul>
    </nav>
  </div>
</div>