---
// src/components/ContactForm.astro
---

<div class="flex flex-col md:flex-row gap-8 items-center max-w-6xl mx-auto p-6">
    <!-- Formulario -->
    <form id="contactForm" class="flex-1 space-y-4">
      <div class="space-y-4 ">
        <div>
          <label class="block text-red-500 text-sm mb-1">Nombre</label>
          <input
            type="text"
            name="nombre"
            required
            class="w-full p-2 rounded bg-blue-50 border border-blue-100 focus:outline-none focus:ring-2 focus:ring-blue-200"
          />
        </div>
        
        <div>
          <label class="block text-red-500 text-sm mb-1">Apellido</label>
          <input
            type="text"
            name="apellido"
            required
            class="w-full p-2 rounded bg-blue-50 border border-blue-100 focus:outline-none focus:ring-2 focus:ring-blue-200"
          />
        </div>
  
        <div>
          <label class="block text-red-500 text-sm mb-1">Teléfono</label>
          <input
            type="tel"
            name="telefono"
            required
            class="w-full p-2 rounded bg-blue-50 border border-blue-100 focus:outline-none focus:ring-2 focus:ring-blue-200"
          />
        </div>
  
        <div>
          <label class="block text-red-500 text-sm mb-1">Email</label>
          <input
            type="email"
            name="email"
            required
            class="w-full p-2 rounded bg-blue-50 border border-blue-100 focus:outline-none focus:ring-2 focus:ring-blue-200"
          />
        </div>
  
        <div class="flex items-start gap-2">
          <input
            type="checkbox"
            id="politica"
            name="aceptaPolitica"
            required
            class="mt-1"
          />
          <label for="politica" class="text-red-500 text-sm">
            Acepto Política de Tratamiento de Datos Personales.
          </label>
        </div>
      </div>
    </form>
  
    <!-- Panel derecho con mensaje - Ahora con altura y padding ajustados para coincidir con el formulario -->
    <div class="flex-1 flex items-stretch">
      <div class="bg-teal-500 w-full rounded-lg border-4 border-emerald-600 shadow-lg flex items-center justify-center p-8">
        <h2 class="text-white text-4xl md:text-6xl  font-bold leading-tight text-right">
          VIVIR DIFERENTE<br />EN TU PROPIO<br />ESPACIO Y A TU<br />MANERA
        </h2>
      </div>
    </div>
  </div>
  
  <style>
    input[type="checkbox"] {
      accent-color: rgb(239, 68, 68);
    }
  
    input {
      transition: all 0.2s ease-in-out;
    }
  
    input:focus {
      transform: translateY(-1px);
    }
  </style>
  
  <script>
    const form = document.getElementById('contactForm') as HTMLFormElement;
    
    form?.addEventListener('submit', (e) => {
      e.preventDefault();
      const formData = new FormData(form);
      const data = Object.fromEntries(formData);
      console.log('Datos del formulario:', data);
    });
  </script>