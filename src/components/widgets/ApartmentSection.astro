---
// src/components/widgets/ApartmentSection.astro
import { Image } from 'astro:assets';
import apartaestudioAlcoba from '../../assets/images/apartaestudio-alcoba.webp';
import apartaestudiosBogota from '../../assets/images/apartaestudios-bogota.webp';
---
<div class="apartment-section px-8 md:px-16 lg:px-24 pb-8 md:pb-16 lg:pb-24">
  <section class="w-full bg-blue-400 p-6 rounded-3xl">
    <div class="bg-white rounded-3xl p-6">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      {/* Columna izquierda - Información */}
      <div>
        <h2 class="text-4xl md:text-5xl font-bold mb-6 text-transparent bg-clip-text bg-gradient-to-r from-purple-600 to-blue-500 glitch-text">
          BOSS<br />ROOM
        </h2>

        <div class="space-y-3 text-gray-700 text-sm md:text-base">
          {/* Descripción destacada */}
          <div class="mb-6">
            <span class="bg-red-500 text-white font-bold px-3 py-1 rounded">Descripción</span>
            <p class="mt-2 font-semibold text-gray-700 leading-relaxed">
              Experimenta el verdadero significado del coliving moderno. Un espacio diseñado para profesionales y nómadas digitales que buscan una comunidad vibrante y servicios premium. Aquí podrás trabajar, socializar y relajarte en un ambiente único.
            </p>
          </div>
        
          {/* Resto de información en horizontal con otro color */}
          <div class="grid grid-cols-2 gap-4">
            <div class="flex flex-col gap-1">
              <span class="bg-indigo-500 text-white font-bold px-3 py-1 rounded text-sm">Metros</span>
              <p class="font-bold text-sm">23 M²</p>
            </div>
          
            <div class="flex flex-col gap-1">
              <span class="bg-indigo-500 text-white font-bold px-3 py-1 rounded text-sm">Servicios</span>
              <p class="font-bold text-sm">Incluidos</p>
            </div>
          
            <div class="flex flex-col gap-1">
              <span class="bg-indigo-500 text-white font-bold px-3 py-1 rounded text-sm">Inversión</span>
              <p class="font-bold text-sm">Consultar</p>
            </div>
          
            <div class="flex flex-col gap-1">
              <span class="bg-indigo-500 text-white font-bold px-3 py-1 rounded text-sm">Pet friendly</span>
              <p class="font-bold text-sm">Sí</p>
            </div>
          
            <div class="flex flex-col gap-1">
              <span class="bg-indigo-500 text-white font-bold px-3 py-1 rounded text-sm">Smart TV</span>
              <p class="font-bold text-sm">Incluida</p>
            </div>
          </div>
        </div>

        {/* Tabla de Precios */}
        <div class="mt-6 bg-gray-50 rounded-lg p-3">
          <div class="grid grid-cols-2 md:grid-cols-4 gap-2 text-sm">
                        <div class="text-center">
              <h3 class="font-bold">1 Mes</h3>
              <p class="font-semibold">$3,000,000</p>
              <p class="text-xs text-gray-500">COP/MES</p>
            </div>
            <div class="text-center">
              <h3 class="font-bold">3 Meses</h3>
              <p class="font-semibold">$2,700,000</p>
              <p class="text-xs text-gray-500">COP/MES</p>
            </div>
            <div class="text-center">
              <h3 class="font-bold">6 Meses</h3>
              <p class="font-semibold">$2,500,000</p>
              <p class="text-xs text-gray-500">COP/MES</p>
            </div>
            <div class="text-center">
              <h3 class="font-bold">12 Meses</h3>
              <p class="font-semibold">$2,380,000</p>
              <p class="text-xs text-gray-500">COP/MES</p>
            </div>
          </div>
        </div>
      </div>

      {/* Columna derecha - Imágenes */}
      <div class="space-y-3">
        <div class="w-full h-48 md:h-56 overflow-hidden rounded-xl">
          <Image 
            src={apartaestudioAlcoba}
            alt="Vista principal del apartamento"
            class="w-full h-full object-cover cursor-pointer"
            width={800}
            height={400}
          />
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="h-32 md:h-40 overflow-hidden rounded-xl">
            <Image 
              src={apartaestudiosBogota}
              alt="Vista interior del apartamento"
              class="w-full h-full object-cover cursor-pointer"
              width={400}
              height={300}
            />
          </div>
          <div class="h-32 md:h-40 overflow-hidden rounded-xl">
            <Image 
              src={apartaestudioAlcoba}
              alt="Vista de la terraza"
              class="w-full h-full object-cover cursor-pointer"
              width={400}
              height={300}
            />
          </div>
        </div>
        <button class="w-full bg-blue-600 text-white py-3 rounded-full text-sm md:text-base font-semibold hover:bg-blue-700 transition-colors">
          Tour Virtual
        </button>
      </div>
    </div>
  </div>
</section>

{/* Modal para las imágenes */}
<div id="galleryModal" class="fixed inset-0 bg-black/90 hidden z-50">
  <button 
    type="button"
    id="closeModalBtn"
    class="absolute top-4 right-4 text-white text-4xl hover:text-gray-300"
  >
    ×
  </button>

  <button 
    type="button"
    id="prevBtn"
    class="absolute left-4 top-1/2 -translate-y-1/2 text-white text-4xl hover:text-gray-300"
  >
    ‹
  </button>

  <button 
    type="button"
    id="nextBtn"
    class="absolute right-4 top-1/2 -translate-y-1/2 text-white text-4xl hover:text-gray-300"
  >
    ›
  </button>

  <div class="flex items-center justify-center h-full">
    <img id="modalImg" src="" alt="" class="max-h-[90vh] max-w-[90vw] object-contain" />
  </div>
</div>
</div>



<style>
  .glitch-text {
    text-shadow: 
      2px 2px #ff00ff,
      -2px -2px #00ffff;
    animation: glitch 2s infinite;
  }

  @keyframes glitch {
    0% {
      text-shadow: 2px 2px #ff00ff, -2px -2px #00ffff;
    }
    25% {
      text-shadow: -2px 2px #ff00ff, 2px -2px #00ffff;
    }
    50% {
      text-shadow: 2px -2px #ff00ff, -2px 2px #00ffff;
    }
    75% {
      text-shadow: -2px -2px #ff00ff, 2px 2px #00ffff;
    }
    100% {
      text-shadow: 2px 2px #ff00ff, -2px -2px #00ffff;
    }
  }
</style>

<script>
  class GalleryManager {
    private modal: HTMLElement | null;
    private modalImg: HTMLImageElement | null;
    private images: NodeListOf<Element>;
    private currentIndex: number;
    private componentRoot: Element;

    constructor(componentRoot: Element) {
      this.componentRoot = componentRoot;
      this.modal = componentRoot.querySelector('#galleryModal');
      this.modalImg = componentRoot.querySelector('#modalImg');
      this.images = componentRoot.querySelectorAll('img[class*="object-cover"]');
      this.currentIndex = 0;
      
      this.init();
    }

    private init() {
      if (!this.modal || !this.modalImg) return;

      // Abrir modal
      this.images.forEach((img, index) => {
        img.addEventListener('click', () => {
          this.currentIndex = index;
          if (this.modalImg) {
            this.modalImg.src = (img as HTMLImageElement).src;
            this.modalImg.alt = (img as HTMLImageElement).alt;
          }
          this.modal?.classList.remove('hidden');
        });
      });

      // Cerrar modal
      this.componentRoot.querySelector('#closeModalBtn')?.addEventListener('click', () => {
        this.modal?.classList.add('hidden');
      });

      // Navegación
      this.componentRoot.querySelector('#nextBtn')?.addEventListener('click', () => {
        this.navigateGallery('next');
      });

      this.componentRoot.querySelector('#prevBtn')?.addEventListener('click', () => {
        this.navigateGallery('prev');
      });
    }

    private navigateGallery(direction: 'next' | 'prev') {
      if (direction === 'next') {
        this.currentIndex = (this.currentIndex + 1) % this.images.length;
      } else {
        this.currentIndex = (this.currentIndex - 1 + this.images.length) % this.images.length;
      }
      
      const image = this.images[this.currentIndex] as HTMLImageElement;
      if (this.modalImg) {
        this.modalImg.src = image.src;
        this.modalImg.alt = image.alt;
      }
    }
  }

  function setupGallery() {
    // Inicializar el gallery manager para cada instancia del componente
    document.querySelectorAll('.apartment-section').forEach(component => {
      new GalleryManager(component);
    });
  }

  setupGallery();
  document.addEventListener('astro:page-load', setupGallery);
</script>